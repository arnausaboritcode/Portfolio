---
import LinkInline from "./LinkInline.astro";

import Arrow from "../icons/Arrow.astro";

interface Props {
  date: string;
  title: string;
  company: string;
  description: string;
  link?: string;
}

const { date, title, company, description, link } = Astro.props;
---

<div class="absolute w-3 h-3 bg-orange-400 rounded-full mt-1.5 -start-1.5">
</div>

<div
  class="flex md:flex-row flex-col justify-between gap-x-10 pb-12"
  data-aos="fade-up"
>
  <div class="flex flex-col md:w-3/6 w-full pb-12">
    <h3 class="text-xl font-semibold text-orange-400/90">
      {title}
    </h3>
    <h4 class="text-lg font-semibold text-white">
      {company}
    </h4>
    <time class="mt-2 text-sm font-normal leading-none text-white/80"
      >{date}</time
    >
  </div>
  <div class="flex flex-col md:w-3/6 w-full">
    <p class="mb-4 text-base font-normal text-gray-300 text-pretty">
      {description}
    </p>
    {
      link && (
        <LinkInline href={link}>
          PÃ¡gina web
          <Arrow class="size-4" />
        </LinkInline>
      )
    }
  </div>
</div>
