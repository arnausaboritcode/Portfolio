---
import SocialBadge from "../components/SocialBadge.astro";
import Angular from "../icons/Angular.astro";
import GitHub from "../icons/GitHub.astro";
import Preview from "../icons/Preview.astro";
import Tailwind from "../icons/Tailwind.astro";

const TAGS = {
  ANGULAR: {
    name: "Angular",
    class: "bg-black text-white",
    icon: Angular,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-cyan-800 text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "PopCorn - A movie streaming platform",
    description:
      "A web application that presents itself as an online streaming service for movies. Its goal is to provide an intuitive interface for presenting, organizing, and filtering information regarding cinematographic content in an effective and satisfactory manner for users. ",
    link: "https://tabler.io/icons",
    github: "https://tabler.io/docs/getting-started",
    image: "/projects/popcorn.webp",
    tags: [TAGS.ANGULAR, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, image, tags }) => (
    <div class="flex md:flex-row flex-col justify-between space-x-0 space-y-12 md:space-x-12 md:space-y-0 group">
      <div
        class="flex flex-col md:w-3/6 w-full overflow-clip rounded-xl transition duration-500 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50 md:group-hover:-translate-y-1"
        data-aos="zoom-in"
      >
        <img
          class="object-cover object-top shadow-2xl shadow-white/15 h-56 sm:h-full md:scale-110 w-full md:group-hover:scale-105 transition duration-500"
          src={image}
          loading="lazy"
          alt="Captura de pantalla del proyecto"
        />
      </div>
      <div class="flex flex-col md:w-3/6 w-full space-y-8">
        <h3 class="text-2xl font-semibold text-white" data-aos="fade-left">
          {title}
        </h3>
        <ul class="flex gap-x-2 flex-row">
          {tags.map((tag) => (
            <li data-aos="zoom-out">
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <p class="text-sm text-white/80 my-4 text-pretty" data-aos="fade-up">
          {description}
        </p>
        <div class="flex justify-start items-center gap-x-5">
          <SocialBadge
            href="https://github.com/arnausaboritcode/TFM"
            data-aos="zoom-out"
          >
            <GitHub class="size-6" />
            Code
          </SocialBadge>
          <SocialBadge
            href="https://popcorncinema.vercel.app/welcome"
            data-aos="zoom-out"
          >
            <Preview class="size-6" />
            Preview
          </SocialBadge>
        </div>
      </div>
    </div>
  ))
}
