---
import SocialBadge from "../components/SocialBadge.astro";

import Angular from "../icons/Angular.astro";

import GitHub from "../icons/GitHub.astro";

import Preview from "../icons/Preview.astro";

import Tailwind from "../icons/Tailwind.astro";

import LinkInline from "./LinkInline.astro";

import Arrow from "../icons/Arrow.astro";

const TAGS = {
  ANGULAR: {
    name: "Angular",
    class: "bg-black text-white",
    icon: Angular,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-cyan-800 text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "PopCorn - Una plataforma de streaming de películas",
    description:
      "Una aplicación web que se presenta como un servicio de streaming en línea para películas. Su objetivo es proporcionar una interfaz intuitiva para presentar, organizar y filtrar información sobre contenido cinematográfico de manera efectiva y satisfactoria para los usuarios.",
    link: "https://tabler.io/icons",
    github: "https://tabler.io/docs/getting-started",
    image: "/projects/popcorn.webp",
    tags: [TAGS.ANGULAR, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, image, tags }) => (
    <div
      class="flex md:flex-row flex-col justify-between space-x-0 space-y-12 md:space-x-12 md:space-y-0 group"
      data-aos="fade-up"
    >
      <div class="flex flex-col md:w-3/6 w-full overflow-clip rounded-xl transition duration-500 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50 md:group-hover:-translate-y-1">
        <img
          class="object-cover object-top shadow-2xl shadow-white/15 h-56 sm:h-full md:scale-110 w-full md:group-hover:scale-105 transition duration-500"
          src={image}
          loading="lazy"
          alt="Captura de pantalla del proyecto"
        />
      </div>
      <div class="flex flex-col md:w-3/6 w-full space-y-8">
        <h3 class="text-2xl font-semibold text-white">{title}</h3>
        <ul class="flex gap-x-2 flex-row">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <p class="text-sm text-white/80 my-4 text-pretty">{description}</p>
        <div class="flex justify-start items-center gap-x-5">
          <SocialBadge href="https://github.com/arnausaboritcode/TFM">
            <GitHub class="size-6" />
            Code
          </SocialBadge>
          <SocialBadge href="https://popcorncinema.vercel.app/welcome">
            <Preview class="size-6" />
            Preview
          </SocialBadge>
        </div>
      </div>
    </div>
  ))
}

<div
  class="w-full flex flex-row justify-center items-center text-sm text-white/80 text-pretty mt-20"
>
  <LinkInline href="https://github.com/arnausaboritcode">
    Más en GitHub
    <Arrow class="size-4" />
  </LinkInline>
</div>
